<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <menuitem name="Reportes SRI" id="menu_sri_reporting" parent="account.menu_finance"/>

        <record id="wizard_export_ats_form" model="ir.ui.view">
            <field name="name">Exportar ATS XML</field>
            <field name="model">wizard.ats</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Exportar Archivo ATS">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group states="choose" string="Se exportara la información de la empresa a la que pertenece el usuario actual.">
                            <field name="type_id" invisible="1"/>
                            <field name="period_id" required="1" domain="[('type_id', '=', type_id)]" widget="selection"/>
                            <field name="company_id" required="1" readonly="1" options="{'no_open': True, 'no_create_edit': True}"/>
                            <field name="no_validate"/>
                            <field name="num_estab_ruc"/>
                            <field name="pay_limit" readonly="1"/>
                        </group>
                        <group states="export" string="Archivo generado correctamente, guardelo en su ubicación de preferencia.">
                            <field name="fcname" invisible="1"/>
                            <field name="data" filename="fcname"/>
                        </group>
                        <group string="Errores" states="export_error">
                            <field name="fcname_errores" invisible="1"/>
                            <field name="error_data" filename="fcname_errores" readonly="1"/>
                            <field name="fcname" invisible="1"/>
                            <field name="data" filename="fcname" readonly="1"/>
                        </group>
                    </sheet>
                    <footer class="oe_right">
                        <button class="btn-link" special="cancel" states="choose" string="Cancelar"/>
                        <button class="btn-primary" name="act_export_ats" states="choose" string="Exportar XML" type="object"/>
                        <button class="btn-link" states="export,export_error" string="Cerrar" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_export_ats" model="ir.actions.act_window">
            <field name="name">Exportar ATS</field>
            <field name="res_model">wizard.ats</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="action_export_ats" id="menu_export_ats" parent="menu_sri_reporting"/>

    </data>
</odoo>
