<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_payment_printing_form" model="ir.ui.view">
            <field name="name">account.payment.printing.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='post']" position="before">
                    <button name="print_move" class="oe_highlight" states="posted" string="Imprimir" type="object"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>