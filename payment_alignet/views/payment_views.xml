<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="acquirer_form_alignet" model="ir.ui.view">
            <field name="name">acquirer.form.alignet</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'alignet')]}">
                        <field name="acquirer_ref_id"/>
                        <field name="idcommerce" required="1"/>
                    </group>
                </xpath>
                <notebook position="inside">
                    <page string="Seguridad" attrs="{'invisible': [('provider', '!=', 'alignet')]}">
                        <div>
                            <label for="vector" string="Vector"/>
                            <field name="vector" required="1" class="oe_inline"/>  -
                            <button string="Generar" name="generate_vector" icon="fa-cog" class="oe_inline" type="object"/>
                        </div>
                        <group>
                            <field name="publickey_sign"/>
                        </group>
                        <group>
                            <field name="publickey_crypt"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

</odoo>
