<?xml version="1.0" ?>
<openerp>
  <data>
    <record id="email_template_erefguide" model="mail.template">
      <field name="name">Send eRefguide</field>
      <field name="email_from">${(object.company_id.email2)|safe}</field>
      <field name="subject">GUÍA DE REMISIÓN ${object.company_id.name}</field>
      <field name="partner_to">${object.partner_id.id}</field>
      <field name="model_id" ref="stock.model_stock_picking"/>
      <field name="auto_delete" eval="True"/>
      <field name="report_template" ref="l10n_ec_einvoice.erefguide"/>
      <field name="report_name">GUIA_${(object.name or '').replace('/','_')}</field>
      <field name="lang">${object.partner_id.lang}</field>
      <field name="body_html"><![CDATA[
      Estimad@ ${ object.partner_id.name },

      adjunto encontrará su guía de remisión electrónica número ${ object.name }, con fecha
      de emisión ${ object.date }.

      ]]>
      </field>
    </record>
  </data>
</openerp>
